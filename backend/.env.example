# ============================================
# POSTGRESQL DATABASE
# ============================================
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=rag_chat
PG_USER=postgres
PG_PASSWORD=password
PG_SSL=false

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ============================================
# CORS CONFIGURATION
# ============================================
# Separar múltiplas URLs com vírgula
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# ============================================
# OPENROUTER API
# ============================================
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MAX_TOKENS=2000
OPENROUTER_TEMPERATURE=0.7

# ============================================
# EVOLUTION API (WhatsApp)
# ============================================
# Valores padrão para configuração inicial
# IMPORTANTE: Não deixe API Keys hardcoded no código!
DEFAULT_EVOLUTION_API_URL=https://evodevs.cordex.ai
DEFAULT_EVOLUTION_API_KEY=

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
# Tipos permitidos: application/pdf,text/plain,text/markdown
ALLOWED_FILE_TYPES=application/pdf,text/plain,text/markdown

# ============================================
# DEFAULT APP CONFIG
# ============================================
DEFAULT_SYSTEM_PROMPT=Você é um assistente útil que responde perguntas com base no contexto fornecido.
DEFAULT_MODEL=openai/gpt-3.5-turbo

# ============================================
# SECURITY
# ============================================
JSON_LIMIT=10mb